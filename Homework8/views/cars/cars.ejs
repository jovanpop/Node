<%- include ../partials/header %>
      <table class="table table-dark table-hover mt-5">
        <thead>
          <tr class="text-center">
              <th>Brand</th>
              <th>Model</th>
              <th>Year</th>
              <th>Country</th>
              <th class="text-end">Edit</th>
          </tr>
      </thead>
      <tbody>
              <% cars.map ((car)=>{%>
              <tr class="text-center">
                  <td style="text-transform: capitalize;"><%= car.brand %></td>
                  <td style="text-transform: capitalize;"><%= car.model %></td>
                  <td><%= car.year %></td>
                  <td style="text-transform: capitalize;"><%= car.country.name %></td>
                  <td class="text-end" >
                    <a href="/cars/<%= car._id %>" class="btn btn-warning"><i class="bi bi-clock"> Update</i></a>
                    <a href="javascript:;" onclick="deleteCar(`<%= car._id %>`)" class="btn btn-danger"><i class="bi bi-trash"> Delete</i></a>
                  </td>
              </tr>
              <% }) %>
      </tbody>
      </table>
      <div class="d-grid gap-2 mt-2">
        <a href="/cars/create" class="btn btn-primary bg-warning text-black">Add new car</a>
      </div>
    </div>
    <%- include ../partials/footer %>